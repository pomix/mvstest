@if (Request.IsAuthenticated)
{
    
    <form action="/Account/LogOff" method="post" id="logoutForm" class="navbar-form navbar-right">
  
        <div class=" form-group">
            @Html.AntiForgeryToken()
                <button type="submit" class="form-control btn btn-primary">Выйти</button>
            
        </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Управление" })
        </li>
    </ul>


}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
