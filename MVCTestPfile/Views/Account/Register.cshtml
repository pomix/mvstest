@model MVCTestPfile.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Создание новой учетной записи.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row" style="margin-bottom:3px">
        <div class="col-md-2 col-sm-3 col-xs-4 text-right">
            @Html.LabelFor(m => m.UserName)
        </div>
        <div class="col-md-2 col-sm-4 col-xs-5">
            @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control", placeholder = "Login" })
        </div>
    </div>
    <div class="row" style="margin-bottom:3px">
        <div class="col-md-2 col-sm-3 col-xs-4 text-right">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="col-md-2 col-sm-4 col-xs-5">
            @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>
    <div class="row" style="margin-bottom:3px">
        <div class="col-md-2 col-sm-3 col-xs-4 text-right">
            @Html.LabelFor(m => m.ConfirmPassword)
        </div>
        <div class="col-md-2 col-sm-4 col-xs-5">
            @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>
    <input type="submit" class="btn btn-default" value="Регистрация" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
